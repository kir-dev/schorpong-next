<p id="notice"><%= notice %></p>

<div class="mx-4">
  <h1 class="my-10 text-2xl font-bold">Articles</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Intro</th>
        <th>Image</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.intro %></td>
          <td><%= article.image %></td>
          <td><%= article.content %></td>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Article', new_article_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>


